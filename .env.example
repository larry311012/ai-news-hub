# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_news
# For SQLite (development): sqlite:///./ai_news.db

# Security Keys (Generate new ones!)
ENCRYPTION_KEY=your-32-byte-base64-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
CSRF_SECRET_KEY=your-csrf-secret-key-here

# AI Provider Keys (Users provide their own)
# Set these in Profile â†’ API Keys in the web interface
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# OAuth Configuration (Users configure their own apps)
# Twitter (OAuth 1.0a)
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret

# LinkedIn (OAuth 2.0)
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Instagram (OAuth 2.0)
# INSTAGRAM_CLIENT_ID=your-instagram-client-id
# INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Threads (OAuth 2.0)
# THREADS_CLIENT_ID=your-threads-client-id
# THREADS_CLIENT_SECRET=your-threads-client-secret

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
